@model manage_coffee_shop_web.Models.Category

<h2>Sửa danh mục</h2>

<form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
