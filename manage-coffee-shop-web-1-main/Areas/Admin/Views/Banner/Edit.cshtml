@model manage_coffee_shop_web.Models.Banner

<h2>Sửa Banner</h2>

<form asp-area="Admin" asp-controller="Banner" asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Tiêu đề</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mô tả</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Hình ảnh hiện tại</label><br />
        <img src="@Model.Image" width="150" />
    </div>
    <div class="form-group">
        <label>Chọn ảnh mới (nếu có)</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Cập nhật</button>
    <a asp-area="Admin" asp-controller="Banner" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
