@model manage_coffee_shop_web.ViewModels.LoginViewModel

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Đăng nhập</h2>
        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="invalid-feedback">Vui lòng nhập email hợp lệ.</div>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark">Đăng nhập</button>
            </div>
            <p class="mt-3 text-center">
                Bạn chưa có tài khoản? <a href="/Account/Register">Đăng ký ngay</a>
            </p>
        </form>
    </div>
</div>