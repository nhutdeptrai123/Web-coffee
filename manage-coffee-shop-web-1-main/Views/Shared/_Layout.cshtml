<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - manage_coffee_shop_web</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header class="header bg-light text-dark py-2">
        <div class="container-fluid">
            <!-- Authentication Section -->
            <div class="auth-section d-flex justify-content-end align-items-center py-1">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="me-3">Welcome, @User.Identity.Name</span>
                    <a asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm">Đăng xuất</a>
                }
                else
                {
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-sm me-2">Đăng nhập</a>
                    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-sm">Đăng ký</a>
                }
            </div>
            <!-- Navigation Section -->
            <div class="nav-section">
                <nav class="navbar">
                    <a href="#home">Trang chủ</a>
                    <a href="#about">về CHICKEN CAFE</a>
                    <a href="#menu">Thực đơn</a>
                    <a href="#products">Sản phẩm</a>
                    <a href="#review">Tin tức</a>
                    <a href="#contact">Liên hệ</a>
                    @* Thêm liên kết dành cho Admin *@
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="AdminDashBoard" asp-action="Index">Bảng điều khiển Admin</a>
                    }
                 
                </nav>
            </div>
        </div>
    </header>
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer bg-dark text-white text-center py-3">
        <p>&copy; 2025 - Chicken Cafe | All rights reserved</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>